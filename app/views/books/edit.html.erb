<div class="row">
  <div class="pt-3 col-3">
    <h3>Editing Book</h3>
    <%= form_with model: @book do |f| %>
    <div class="form-group">
      <label for="title">title</label>
      <%= f.text_field :title, class: "form-control w70", id: "title" %>
    </div> 
    <div class="form-group pb-3">
      <label for="body">body</label> 
      <%= f.text_area :body, class: "form-control w70", id: "body" %>
    </div>  
      <%= f.submit "Update book", class: "btn btn-primary" %>
    <% end %>

    <%= link_to "show", book_path(@book.id), class: "link-dark" %>
    |
    <%= link_to "Back", books_path, class: "link-dark" %>
  </div>
</div>

