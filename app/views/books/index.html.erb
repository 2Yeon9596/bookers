<div class="container">
  <div class="row">
    <div class="col-7">
      <h3 class="text-dark">Books</h3>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Title</th>
              <th scope="col">Body</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>  
            <tr>
              <td><%= book.title %></td>
              <td><%= book.body %></td>
              <td><%= link_to "show", book_path(book.id) %></td>
              <td><%= link_to "edit", edit_book_path(book.id) %></td>
              <td><%= link_to "delete", book, data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
    </div>  
    <div class="col-5"></div> 
  </div>


  <div class="row">
    <div class="col-2">
      <h3 class="text-dark">New Book</h3>
      <% if @book.errors.any? %>
      <%= @book.errors.count %>errors prohibited this book from being saved:
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      <% end %> 
      <%= form_with(model: @book, local: true) do |f| %>
      <div class="form-group w-20">
        <label for="title">title</label>
        <%= f.text_field :title, class: "form-control", id: "title" %>
      </div>
      <div class="form-group w-20">
        <label for="body">body</label> 
        <%= f.text_area :body, class: "form-control", id: "body" %>
      </div>  
        <%= f.submit "create book", class: "btn btn-primary" %>
      <% end %> 
    </div>
    <div class="col-8"></div> 
  </div>
</div>