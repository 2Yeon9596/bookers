<h1>Books</h1>

<table>
<% @books.each do |book| %>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "show", book_path(book.id) %></td>
      <td><%= link_to "edit", edit_book_path(book.id) %></td>
    </tr>
  </tbody>
<% end %>
</table>





<h1>New Book</h1>


<%= form_with model: @book do |f| %>
  <span>title</span>
  <%= f.text_field :title %>
  <span>book</span>
  <%= f.text_area :body %>
  <%= f.submit "create book" %>
<% end %>
